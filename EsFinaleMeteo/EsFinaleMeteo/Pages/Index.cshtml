@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    body, html {
        height: 100%;
        /* The image used */
        background-image: url("../images/Radio_Foto_Home.PNG");
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<div class="text-center">
    <br />
    <br />
    <h1 class="text-black-50" align="center"><i>Benvenuto in MeteoB</i></h1>
    <br />
    <br />
</div>
<form method="post">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <style>
                .center {
                    margin: 0;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
            <h5 class="text-black-50" align="center"><i>Inserire la città desiderata</i></h5>
            <div align="center">
                <input asp-for="citta.name" />
                <span asp-validation-for="citta.name"></span>
            </div>    
            <br />
            <div class="text-center">
                <button type="submit" id="cerca" class="btn btn-info" style="width:100px">Cerca</button>
            </div>
        </div>
    </div>
</form>
