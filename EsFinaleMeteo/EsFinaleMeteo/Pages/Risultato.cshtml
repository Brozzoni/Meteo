@page
@model EsFinaleMeteo.Pages.RisultatoModel
@{
    ViewData["Title"] = "Risultato";
}

<form method="post">
    <div class="text-center">
        <br />
        <br />
        <h1 class="text-black-50" align="center"><i>Ecco i dati meteo di...</i></h1>
        <br />
        <br />
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <style>
                .center {
                    margin: 0;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
            <table class="table" align="center">
                <thead>
                    <tr>
                        <th></th>
                        <th>Giorno</th>
                        <th>MinT</th>
                        <th>MaxT</th>
                        <th>MediaT</th>
                        <th>%Probabilità</th>
                        <th>Alba</th>
                        <th>Tramonto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ris)
                    {
                        <tr align="center">
                            <td>@item.symbolPhrase</td>
                            <td>@item.date</td>
                            <td>@item.minTemp</td>
                            <td>@item.maxTemp</td>
                            <td></td>
                            <td>@item.precipProb</td>
                            <td>@item.sunrise</td>
                            <td>@item.sunset</td>
                        </tr>

                    }
                </tbody>
            </table>
            <br />
            @*<div class="text-center">
                <button type="submit" id="cerca" class="btn btn-info" style="width:100px">Torna alla home</button>
            </div>*@
        </div>
    </div>
</form>